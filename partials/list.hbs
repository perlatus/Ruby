<div class="row">
    <div class="content-column col-xl-12 col-lg-12">
        <div class="content-area">
            <main class="site-main">
                <div class="post-feed">
                    <div class="row">
                        {{#foreach posts visibility="all"}}
                            <div class="post-column col-xl-4 col-lg-4 col-md-6">
                                {{> "loop"}}
                            </div>
                        {{/foreach}}
                    </div>
                </div>
                {{pagination}}
            </main>
        </div>
    </div>
</div>